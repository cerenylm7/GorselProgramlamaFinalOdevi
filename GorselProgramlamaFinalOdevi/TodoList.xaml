<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselProgramlamaFinalOdevi.TodoList">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="GÃ¶rev Ekle"
                     IconImageSource="taskadd.png"
                     Clicked="AddNewTask_Click"/>

        <ToolbarItem Text="Kaydet"
                     IconImageSource="save.png"
                     Clicked="Save_Click"/>

        <ToolbarItem Text="PaylaÅŸ"
                     IconImageSource="share.png"
                     Clicked="Share_Click"/>
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="listTasks"
                    SelectionMode="None"
                    Margin="10">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border StrokeThickness="0.25" Stroke="Gray">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                          ColumnDefinitions="Auto,*,Auto">

                        <Switch IsToggled="{Binding IsCompleted}" />

                        <Label Text="{Binding Title}"
                               FontSize="20"
                               BackgroundColor="LightGray"
                               Grid.Column="1"
                               Grid.Row="0" />

                        <Label Text="{Binding FullName}"
                               Grid.Column="1"
                               Grid.Row="1" />

                        <Label Text="{Binding DateTimeInterval}"
                               TextColor="Gray"
                               FontSize="12"
                               FontAttributes="Italic"
                               Grid.Column="1"
                               Grid.Row="2" />

                        <!-- Yeni: Detail alanÄ± -->
                        <Label Text="{Binding Detail}"
                               TextColor="DarkSlateGray"
                               FontSize="13"
                               FontAttributes="Italic"
                               Grid.Column="1"
                               Grid.Row="3"
                               LineBreakMode="WordWrap" />

                        <VerticalStackLayout Grid.Column="2"
                                             Grid.Row="0"
                                             Grid.RowSpan="4">

                            <Button Text="âœï¸"
                                    Clicked="ButtonDetail_Clicked"
                                    BackgroundColor="Transparent"
                                    CommandParameter="{Binding}" />

                            <Button Text="ðŸ—‘ï¸"
                                    Clicked="ButtonDelete_Clicked"
                                    BackgroundColor="Transparent"
                                    CommandParameter="{Binding}" />

                            <Button Text="ðŸ“¤"
                                    Clicked="ButtonShare_Clicked"
                                    BackgroundColor="Transparent"
                                    CommandParameter="{Binding}" />
                        </VerticalStackLayout>

                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>
